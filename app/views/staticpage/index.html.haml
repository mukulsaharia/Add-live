=provide(:title, 'Introduction')
%title
	= yield(:title)
.index_page
	.container-fluid
		.row-fluid
			.span9
				.title_tag
					=image_tag("title241x40.png")
				.title_line
					Add-live.com
				
			.span3
				-if user_signed_in?
					.members_area
						%strong Welcome,
						.signup_button
							= current_user.fname
							= current_user.lname
					.members_area
						%strong Your Earnings :
						.signup_button
							= current_user.fname
							= current_user.lname
				-else
					%form 
						.members_area
							%strong Members Area
							.btn.btn-normal.btn-primary.signup_button
								=link_to "Sign in Here",new_user_session_path

						.members_area
							%strong New user ?
							.btn.btn-normal.btn-primary.signup_button
								=link_to "Click Here to Register", new_user_registration_path
					 
							
				
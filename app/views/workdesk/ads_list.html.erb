<label class="heading_lable">Ads</label>

<table class="table table-hover" >
	<tr><td><b>Ads ID</b></td><td><b>Orgnization name</b></td><td><b>Question</b></td></tr>
	<% for i in $ads %>
		<% if i.totalclicks > i.usedclicks and i.Active == true and (i.city == current_user.city or i.city == "all") %>
			<tr><td><%= i.id %></td>
			<td><%= link_to i.orgname, :controller => :ads,:id => i.id %></td> 
			<td><%= i.que %></td></tr>
		<% end %>
	<% end %>
</table>
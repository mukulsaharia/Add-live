<%=provide(:title, 'My Workdesk') %>
<div class="index_page">
	<div class="container">	
		<div class="span9">
			<div class="title_tag">
				<%=image_tag("title241x40.png") %>
				
			</div>
			<div class="title_line">
				<%=yield(:title) %>
			</div>
				<div class="workdesk_parts">	
					<div class="tabbable"> <!-- Only required for left/right tabs -->
					  <ul class="nav nav-tabs">
					    <li class="active"><a href="#tab1" data-toggle="tab">Ads</a></li>
					    <li><a href="#tab2" data-toggle="tab">Earning</a></li>
					    <li><a href="#tab3" data-toggle="tab">Referrals</a></li>
					    <li><a href="#tab4" data-toggle="tab">My Profile</a></li>
					  </ul>

					  <div class="tab-content">
					    <div class="tab-pane active" id="tab1">
					      <%= render :template => 'workdesk/ads_list' %>
					    </div>
					    <div class="tab-pane" id="tab2">
					      This is earning phase.
					    </div>
					    <div class="tab-pane" id="tab3">
					      <%= render :template => 'workdesk/refer' %>
					    </div>
					    <div class="tab-pane" id="tab4">
					      <%= render :template => 'workdesk/profile' %>
					    </div>

					  </div>
					</div>
				</div>
			
		</div>
	</div>
</div>
